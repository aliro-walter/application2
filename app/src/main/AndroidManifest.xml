<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.walter.myinternshiplogbook">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Declare camera hardware feature (not required) -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication2">

        <!-- Entry point of the app -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- User Authentication Activities -->
        <activity android:name=".SignupActivity" android:exported="true" />

        <!-- Student Activities -->
        <activity android:name=".StudentDashboardActivity" android:exported="true" />
        <activity android:name=".DailyLogEntryActivity" android:exported="true" />
        <activity android:name=".NewsActivity" android:exported="true" />

        <!-- Supervisor Activities -->
        <activity android:name=".UniversitySupervisorActivity" android:exported="true" />
        <activity android:name=".CompanySupervisorActivity" android:exported="true" />
        <activity android:name=".SupervisorDashboardActivity" android:exported="true" />

        <!-- Miscellaneous Activities -->
        <activity android:name=".Feedback" android:exported="true" />
        <activity android:name=".MainPageActivity" android:exported="false" />

        <!-- Service and Receiver -->
        <service
            android:name=".LogSyncService"
            android:exported="false" />
        <receiver
            android:name=".NetworkChangeReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
